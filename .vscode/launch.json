    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug Hopr",
            "cargo": {
                "args": [
                    "build",
                    "--bin=hopr_k8s_operator",
                    "--package=hopr_k8s_operator"
                ],
                "filter": {
                    "name": "hopr_k8s_operator",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Tests Hopr",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=hopr_k8s_operator",
                    "--package=hopr_k8s_operator"
                ],
                "filter": {
                    "name": "hopr_k8s_operator",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}